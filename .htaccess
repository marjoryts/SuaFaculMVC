RewriteEngine On

# Permite acesso direto a arquivos estáticos (CSS, JS, imagens)
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^.*$ - [L]

# Redireciona todas as outras requisições para a pasta MVC
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ mvc/index.php [QSA,L] 